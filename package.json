{
    "name": "vscode-now",
    "displayName": "Now",
    "description": "Manage your deployments within vscode",
    "version": "0.0.1",
    "publisher": "lucaperret",
    "repository": "lucaperret/vscode-now",
    "license": "MIT",
    "engines": {
        "vscode": "^1.21.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.authentication.setToken",
        "onCommand:extension.authentication.login",
        "onCommand:extension.authentication.verify",
        "onCommand:extension.deployment.logs",
        "onCommand:extension.deployment.open",
        "onCommand:extension.deployment.setAlias",
        "onCommand:extension.deployment.deploy",
        "onCommand:extension.deployment.delete",
        "onCommand:extension.explorer.refresh",
        "onView:nowExplorer"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Now configuration options",
            "properties": {
                "now.showExplorer": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show or hide the Explorer."
                }
            }
        },
        "commands": [
            {
                "command": "extension.authentication.setToken",
                "title": "Set token",
                "category": "Now"
            },
            {
                "command": "extension.authentication.login",
                "title": "Login",
                "category": "Now"
            },
            {
                "command": "extension.authentication.verify",
                "title": "Verify",
                "category": "Now"
            },
            {
                "command": "extension.deployment.logs",
                "title": "Show logs",
                "category": "Now"
            },
            {
                "command": "extension.deployment.open",
                "title": "Open in browser",
                "category": "Now"
            },
            {
                "command": "extension.deployment.setAlias",
                "title": "Set an alias",
                "category": "Now"
            },
            {
                "command": "extension.deployment.deploy",
                "title": "Deploy",
                "description": "Deploy current directory",
                "category": "Now"
            },
            {
                "command": "extension.deployment.delete",
                "title": "Delete",
                "category": "Now"
            },
            {
                "command": "extension.explorer.refresh",
                "title": "Refresh",
                "category": "Now"
            }
        ],
        "views": {
            "explorer": [
                {
                    "id": "nowExplorer",
                    "name": "Now",
                    "when": "config.now.showExplorer == true"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "extension.explorer.refresh",
                    "when": "view == nowExplorer",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "extension.deployment.logs",
                    "when": "view == nowExplorer && viewItem == deploymentNode"
                },
                {
                    "command": "extension.deployment.open",
                    "when": "view == nowExplorer && viewItem == deploymentNode"
                },
                {
                    "command": "extension.deployment.setAlias",
                    "when": "view == nowExplorer && viewItem == deploymentNode"
                },
                {
                    "command": "extension.deployment.delete",
                    "when": "view == nowExplorer && viewItem == deploymentNode"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/keytar": "^4.0.1",
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "@types/request-promise-native": "^1.0.14",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.6"
    },
    "dependencies": {
        "moment": "^2.21.0",
        "request-promise-native": "^1.0.5"
    }
}
